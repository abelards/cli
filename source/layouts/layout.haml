!!! html5
%html
  %head
    %meta{charset: "utf-8"}
    %meta{http_equiv: "X-UA-Compatible", content:"IE=edge,chrome=1"}
    %title Scalingo CLI Homepage

    %meta{name: "viewport", content: "width=device-width, initial-scale=1.0"}

    = javascript_include_tag 'application'
    = stylesheet_link_tag 'application'

    %link{href: "//fonts.googleapis.com/css?family=Roboto:900italic", media: "screen", rel: "stylesheet"}
    %link{href: "//fonts.googleapis.com/css?family=Lato:300,400,700,900", media: "screen", rel: "stylesheet"}
    %link{href: "//fonts.googleapis.com/css?family=Inconsolata:300,400,700,900", media: "screen", rel: "stylesheet"}
    %link{href: "https://appsdeck.eu/favicon.ico", rel: "shortcut icon", type: "image/vnd.microsoft.icon"}

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

  %body
    .nav.navbar.navbar-default.navbar-static-top{role: "navigation"}
      .container
        .row
          .col-xs-12
            .pull-left
              .logo
                %a{href: "https://scalingo.com"}
                  %span.notgo.text-black Scalin
                  %span.go go
            .pull-right
              %ul.list-inline.links.onboard
                %li
                  = link_to "Sign up", "https://scalingo-dashboard-production.appsdeck.eu/users/signup"
                %li
                  = link_to "Sign in", "https://scalingo-dashboard-production.appsdeck.eu/sessions"

    = yield

